<div class="page-header">
  <h1>
    Parties
    <a href="/parties/new" class="btn btn-lg btn-success">New Party</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>City</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Lodging</th>
        <th>Actions</th>
      </tr>

      <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td>
          <% if party.type.present? %>
            <a href="/types/<%= party.type.id %>">
              <%= party.type.event_type %>
            </a>
          <% end %>
        </td>
        <td>
          <% if party.city.present? %>
            <a href="/cities/<%= party.city.id %>">
              <%= party.city.name %>
            </a>
          <% end %>
        </td>
        <td><%= party.start_date %></td>
        <td><%= party.end_date %></td>
        <td>
          <% if party.lodging.present? %>
            <a href="/lodgings/<%= party.lodging.id %>">
              <%= party.lodging.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/parties/<%= party.id %>" class="btn btn-primary">Show</a>
          <a href="/parties/<%= party.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_party/<%= party.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @parties, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
