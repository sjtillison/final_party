<div class="page-header">
  <h1>
    Parties
    <a href="/parties/new" class="btn btn-lg btn-success">New Party</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "parties_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :start_date, "Start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_dategteqPicker'>
                  <%= f.text_field :start_date_gteq, :class => "form-control", :placeholder => "Start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_datelteqPicker'>
                  <%= f.text_field :start_date_lteq, :class => "form-control", :placeholder => "Start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#start_dategteqPicker').on("dp.change", function (e) {
                  $('#start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_datelteqPicker').on("dp.change", function (e) {
                  $('#start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :city_name_cont, "City name contains" %>
      <%= f.text_field :city_name_cont, :class => "form-control", :placeholder => "City name contains" %>
    </div>

<div class="form-group">
      <%= f.label :type_event_type_cont, "Type event_type contains" %>
      <%= f.text_field :type_event_type_cont, :class => "form-control", :placeholder => "Type event_type contains" %>
    </div>

<div class="form-group">
      <%= f.label :lodging_name_cont, "Lodging name contains" %>
      <%= f.text_field :lodging_name_cont, :class => "form-control", :placeholder => "Lodging name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/parties" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#parties_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>City</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Lodging</th>
        <th>Actions</th>
      </tr>

      <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td>
          <% if party.type.present? %>
            <a href="/types/<%= party.type.id %>">
              <%= party.type.event_type %>
            </a>
          <% end %>
        </td>
        <td>
          <% if party.city.present? %>
            <a href="/cities/<%= party.city.id %>">
              <%= party.city.name %>
            </a>
          <% end %>
        </td>
        <td><%= party.start_date %></td>
        <td><%= party.end_date %></td>
        <td>
          <% if party.lodging.present? %>
            <a href="/lodgings/<%= party.lodging.id %>">
              <%= party.lodging.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/parties/<%= party.id %>" class="btn btn-primary">Show</a>
          <a href="/parties/<%= party.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_party/<%= party.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @parties, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
