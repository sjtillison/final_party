<div class="page-header">
  <h1>
    Attendees
    <a href="/attendees/new" class="btn btn-lg btn-success">New Attendee</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Party</th>
        <th>Actions</th>
      </tr>

      <% @attendees.each do |attendee| %>
      <tr>
        <td>
          <% if attendee.user.present? %>
            <a href="/users/<%= attendee.user.id %>">
              <%= attendee.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if attendee.party.present? %>
            <a href="/parties/<%= attendee.party.id %>">
              <%= attendee.party.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/attendees/<%= attendee.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == attendee.user %>
            <a href="/attendees/<%= attendee.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_attendee/<%= attendee.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @attendees, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
