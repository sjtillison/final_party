<!-- Validation failure messages -->
<% if @type.errors.any? %>
  <% @type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Type</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_type" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for event_type -->
      <div class="form-group">
        <label for="event_type" class="control-label">
          Event type
        </label>

        <input type="text" id="event_type" name="event_type" placeholder="Event type" class="form-control" value="<%= @type.event_type %>">
      </div>

      <button class="btn btn-success">
        Create Type
      </button>
      or
      <a href="/types">Cancel</a>
    </form>
  </div>
</div>
