<div class="page-header">
  <h1>
    Types
    <a href="/types/new" class="btn btn-lg btn-success">New Type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event type</th>
        <th>Actions</th>
      </tr>

      <% @types.each do |type| %>
      <tr>
        <td><%= type.event_type %></td>
        <td>
          <a href="/types/<%= type.id %>" class="btn btn-primary">Show</a>
          <a href="/types/<%= type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_type/<%= type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @types, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
